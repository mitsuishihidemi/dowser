.chart
  width 100%
  height 300px
  display flex
  justify-content center
  align-items center
  margin-bottom 50px

.chart.-mini
  width: 300px;
  height: 180px;

.chart a
  opacity .3 !important

.chart .amcharts-graph-line
  animation fadeIn 0.3s ease-in-out

@keyframes fadeIn
  0%   opacity 0
  100% opacity 1

.amcharts-balloon-bg
  height 22p
  y: 8.5

.amcharts-balloon-div:last-child
  margin-top: 8px
