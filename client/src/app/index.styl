wrapper = 0 21px

dark-gray-color = #263238
white-color = #fff

html, body, .app
  width 100%
  height 100%

body
  margin 0
  padding 0

.app
  position relative

.full-screen
  display flex
  flex-direction column
  width 100%
  height 100%

.dark-theme
  color white-color

.header
  flex 0
  margin wrapper

.content
  flex 1
  margin wrapper

  &-center
    display flex
    flex-direction column
    justify-content center

.footer
  flex 0
  text-align center
  font-size 14px
  margin 16px 0

.logo
  margin 21px 0

.main
  background-color dark-gray-color

.wizard
  background-color #ECEFF1

  &-view
    width 700px
    margin 50px auto 0

  &-button
    margin-top 50px
    padding 8 32px

.opening
  text-align center

  &-title
    margin 0 0 30px

  &-description
    width 700px
    margin 0 auto 50px

  &-button
    padding 8px 32px

.input-hint
  position absolute
  left 2px
  right auto
  bottom 7px
  font-size 12px
  line-height 14px
  color grey

.input-ace
  width 100%
  height 300px

.agreement
  text-align center

  &-title
    margin 100px 0 21px

  &-description
    margin 0 0 21px

